@using ApplicationCore.Models
@model ApplicationCore.Models.PagedResultSet<MovieCardModel>
    <div class="rounded">
        <div class="container-fluid">
            <div class="row">
                @foreach (var movieCard in Model?.Data)
                 {
                <div class="col-xl-2 col-sm-4 col-lg-3 col-6">
                    <div class="card mb-4">
                        <!--these are called tag helpers-->
                    <a asp-controller="Movies" asp-action="Details" asp-route-id="@movieCard.Id">
                        <img src="@movieCard.PosterUrl" class="img-fluid" alt="@movieCard.Title" />
                    </a>
                    </div>  
                </div>
                }
            </div>

        </div>
    </div>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disable": "";
    var nextDisabled = !Model.HasNextPage ? "disable" : "";
}
    <a asp-action="genreMovies" asp-route-page="@(Model.PageIndex -1)" class="btn btn-primary @prevDisabled">Previous</a>
    <a asp-action="genreMovies" asp-route-page="@(Model.PageIndex +1)" class="btn btn-primary @nextDisabled">Next</a>