@model List<ApplicationCore.Models.PurchaseRequestModel>

@{
    ViewData["Title"] = "Home Page";
}
<!-- model is a built in obj that holds what you passed in-->

    <h3>Your Purchased Movies</h3>
    <div class="rounded">
        <div class="container-fluid">
            <div class="row">
                @foreach (var movieCard in Model)
                 {
                <div class="col-xl-2 col-sm-4 col-lg-3 col-6">
                    <div class="card mb-4">
                        <!--these are called tag helpers-->
                    <a asp-controller="Movies" asp-action="Details" asp-route-id="@movieCard.MovieId">
                        <img src="@movieCard.Movie.PosterUrl" class="img-fluid" alt="@movieCard.Movie.Title" />
                    </a>
                    <button class="btn btn-secondary">Movie Details</button>
                    </div>  
                </div>
                }
            </div>

        </div>
    </div>
